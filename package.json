{
  "name": "vaudio",
  "version": "1.0.0",
  "description": "Aplicação multiplataforma com React, React Native e Tauri",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm build:shared",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "dev:desktop": "pnpm --filter desktop tauri:dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile build",
    "build:desktop": "pnpm --filter desktop tauri:build",
    "build:shared": "pnpm --filter shared build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r exec rm -rf node_modules dist build",
    "clean:install": "pnpm clean && pnpm install",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "type-check": "pnpm -r type-check",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "update:deps": "pnpm -r update",
    "setup": "pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
