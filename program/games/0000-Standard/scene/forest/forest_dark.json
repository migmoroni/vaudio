{
    "type": "scene",
    "id": "forest_dark",
    "title": "Caminho Escuro",
    "description": "Você segue pelo caminho escuro, sentindo-se cada vez mais apreensivo.",
    "effects": [
        { "action": "temporary", "attribute": "viewing_distance", "operation": "-", "value": 2 }
    ],
    "choice": {
        "1": [
            {
                "if": [
                    {
                        "condition": { "attribute": "viewing_distance", "operator": ">=", "value": 2 },
                        "result": {
                            "label": "Seguir adiante",
                            "text": "Com a tocha acesa, você vê um rio à frente e decide segui-lo",
                            "goto": "scene/forest/forest_river.json"
                        }
                    },
                    {
                        "condition": { "attribute": "viewing_distance", "operator": "<", "value": 2 },
                        "result": {
                            "label": "Seguir adiante",
                            "text": "Sem iluminação suficiente, você vê pouco.",
                            "choice": {
                                "1": [
                                    { 
                                        "label": "Tentar voltar para a entrada",
                                        "text": "Você tenta voltar, mas acaba se perdendo ainda mais na escuridão.",
                                        "goto": "scene/forest/forest_entry.json"
                                    },
                                    {
                                        "label": "Continuar andando no escuro",
                                        "text": "Você tropeça em algo e cai em um buraco escondido. Ao se levantar, percebe que está perto de uma cachoeira.",
                                        "goto": "scene/forest/forest_fall.json"
                                    }
                                ],
                                "2": [
                                    {
                                        "label": "Manipular a tocha",
                                        "text": "Você decide...",
                                        "do": "action/use_torch.json"
                                    }
                                ]
                            }
                        }
                    }
                ]
            },
            {
                "text": "Voltar para a entrada",
                "goto": "scene/forest/forest_entry.json"
            }
        ],
        "2": [
            {
                "text": "Você decide...",
                "do": "action/use_torch.json"
            }
        ]
    }
}